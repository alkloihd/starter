<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Video Frame Viewer</title>
    <style>
        html, body {
            height: 100%;
            margin: 0;
            overflow: hidden;
        }
        #videoContainer {
            position: relative;
            width: 100%;
            height: 100%;
        }
    </style>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const videos = ['page1.mp4', 'page2.mp4', 'page3.mp4'];
            let currentVideo = 0;

            const videoContainer = document.getElementById('videoContainer');
            const video = document.createElement('video');
            video.src = videos[currentVideo];
            video.autoplay = true;
            video.muted = true;
            video.loop = true;
            video.style.width = '100%';
            video.style.height = '100%';
            video.style.objectFit = 'contain';
            videoContainer.appendChild(video);

            let touchStartX = null;
            let touchStartTime = null;
            const tapThreshold = 200;
            const swipeThreshold = 50;

            videoContainer.addEventListener('touchstart', function(event) {
                touchStartX = event.touches[0].clientX;
                touchStartTime = Date.now();
            });

            videoContainer.addEventListener('touchend', function(event) {
                let touchEndX = event.changedTouches[0].clientX;
                let deltaX = touchEndX - touchStartX;
                let touchEndTime = Date.now();
                let tapTime = touchEndTime - touchStartTime;

                if (Math.abs(deltaX) > swipeThreshold) {
                    if (deltaX < 0) {
                        currentVideo = (currentVideo + 1) % videos.length;
                    } else {
                        currentVideo = (currentVideo - 1 + videos.length) % videos.length;
                    }
                    video.src = videos[currentVideo];
                } else if (tapTime < tapThreshold) {
                    if (video.paused) {
                        video.play();
                    } else {
                        video.pause();
                    }
                }

                touchStartX = null;
                touchStartTime = null;
            });
        });
    </script>
</head>
<body>
    <div id="videoContainer"></div>
</body>
</html
